{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ES2019", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "src/core/types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@service/*": ["src/domain/service/*"],
      "@controller/*": ["src/domain/controller/*"],
      "@schema/*": ["src/domain/schema/*"],
      "@core/*": ["src/core/*"]
    },
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
